{
  "name": "moj-express-skeleton",
  "version": "0.1.0",
  "private": true,
  "main": "public/app.js",
  "type": "module",
  "imports": {
    "#*": "./*"
  },
  "scripts": {
    "start": "node public/app.js",
    "clean": "rimraf public",
    "build": "npm run clean && npm run build:ts && node public/esbuild.js",
    "lint": "npx eslint . --fix",
    "dev": "nodemon --watch . --ext js,ts,json,scss --ignore node_modules --ignore public/ --delay 500ms --exec 'npm run build:ts && node public/start-server.js'",
    "deploy": "./scripts/deploy.sh",
    "prepare": "husky",
    "tsc": "tsc --noEmit",
    "build:ts": "tsc",
    "test:unit": "mocha" 
  },
  "engines": {
    "node": "22.13.1"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "body-parser": "^2.2.0",
    "chalk": "^5.4.1",
    "compression": "^1.8.0",
    "cookie-parser": "~1.4.6",
    "csrf-sync": "^4.1.0",
    "debug": "~4.4.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.0",
    "express-validator": "^7.2.1",
    "figlet": "^1.8.1",
    "fs-extra": "^11.3.0",
    "govuk-frontend": "^5.9.0",
    "helmet": "^8.1.0",
    "http-errors": "~2.0.0",
    "morgan": "~1.10.0",
    "nunjucks": "^3.2.4",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/chai": "^5.2.2",
    "@types/compression": "^1.7.5",
    "@types/connect-livereload": "^0.6.3",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/livereload": "^0.9.5",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.21",
    "@types/nunjucks": "^3.2.6",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "chai": "^5.2.0",
    "chokidar": "3.6.0",
    "connect-livereload": "^0.6.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.2",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "livereload": "^0.9.3",
    "middleware-axios": "^3.0.0",
    "mocha": "^11.5.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "sass": "^1.86.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  }
}
