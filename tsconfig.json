{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"allowJs": true, // Allow JavaScript files
		"checkJs": false, // Don't type-check JS initially
		"outDir": "public",
		"rootDir": ".", // Changed from "src" to "." to include all source files
		"sourceMap": true,
		"skipLibCheck": true, // Skip type checking of declaration files
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
		"noImplicitAny": false, // Be permissive initially
		"strict": false, // Add strictness gradually
		"forceConsistentCasingInFileNames": false, // Be permissive initially
		"baseUrl": ".",
		"paths": {
			"#*": ["./*"]
		}
	},
	"include": [
		"src/**/*",
		"middleware/**/*",
		"utils/**/*",
		"routes/**/*",
		"config.js"
	],
	"exclude": [
		"node_modules",
		"public"
	]
}